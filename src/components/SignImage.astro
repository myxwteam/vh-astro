---
// 访客签名图片组件
import SITE_CONFIG from "@/config";
const { Site } = SITE_CONFIG;

// 获取当前站点的签名图片URL
const signImageUrl = `${Site}/api/sign`;
---

<section class="vh-aside-item sign-image">
  <h3>访客签名</h3>
  <div class="sign-image-wrapper">
    <img
      src={signImageUrl}
      alt="访客签名卡"
      class="sign-image-card"
      loading="lazy"
    />
  </div>
</section>

<style>
  .sign-image {
    margin-bottom: 1rem;
  }

  .sign-image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem;
  }

  .sign-image-card {
    width: 100%;
    max-width: 400px;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .sign-image-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }
</style>
